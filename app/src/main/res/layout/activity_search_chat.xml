<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.search_chat.SearchChatActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/search_chat_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/power_blue"
        app:titleTextColor="@color/white"
        android:gravity="center">

        <EditText
            android:id="@+id/search_chat_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/roundedit"
            android:padding="3dp"
            android:layout_marginHorizontal="60dp"
            android:hint=" Search for chat"
            android:layout_marginVertical="5dp">
        </EditText>

    </androidx.appcompat.widget.Toolbar>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_search_chat"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/search_chat_tool_bar"/>

</androidx.constraintlayout.widget.ConstraintLayout>